// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Tests, lint and docs",
            "command": "tox -p",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
        },
        {
            "label": "Generate schema",
            "type": "shell",
            "command": "deploytools schema ${input:schema-folder}",
            "problemMatcher": []
        },
        {
            "label": "Deploy modules",
            "type": "shell",
            "command": "deploytools deploy ${input:deploy-folder} ${input:config-folder}",
            "problemMatcher": []
        },
        {
            "label": "Clean deployment",
            "type": "shell",
            "command": "rm -r ${workspaceFolder}/demo-output/ && mkdir ${workspaceFolder}/demo-output/",
            "problemMatcher": []
        },
        {
            "label": "Validate deployment",
            "type": "shell",
            "command": "deploytools validate ${input:deploy-folder} ${input:config-folder}",
            "problemMatcher": []
        },
        {
            "label": "Deprecate module",
            "type": "shell",
            "command": "deploytools deprecate ${input:module-name} ${input:module-version} ${input:deploy-folder}",
            "problemMatcher": []
        },
        {
            "label": "Restore module",
            "type": "shell",
            "command": "deploytools restore ${input:module-name} ${input:module-version} ${input:deploy-folder}",
            "problemMatcher": []
        },
        {
            "label": "Remove module",
            "type": "shell",
            "command": "deploytools remove ${input:module-name} ${input:module-version} ${input:deploy-folder}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "schema-folder",
            "description": "Schema output folder",
            "default": "${workspaceFolder}/src/deploytools/models/schemas/",
            "type": "promptString"
        },
        {
            "id": "deploy-folder",
            "description": "Deployment output folder",
            "default": "${workspaceFolder}/demo-output/",
            "type": "promptString"
        },
        {
            "id": "config-folder",
            "description": "Configuration folder",
            "default": "${workspaceFolder}/src/deploytools/demo_configuration/",
            "type": "promptString"
        },
        {
            "id": "module-name",
            "description": "Module name",
            "default": "example-module-file",
            "type": "promptString"
        },
        {
            "id": "module-version",
            "description": "Module version",
            "default": "0.1",
            "type": "promptString"
        },
    ]
}