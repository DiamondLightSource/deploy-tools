#%Module1.0
##
## ec - ec command line tool configured for b16
##
module-whatis "ec command line tool configured for b16"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "b16-beamline/b16"
setenv EC_K8S_NAMESPACE "b16-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/b16-services.git"

module load edge-containers-cli
module load k8s-b16/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/b16/entrypoints"
