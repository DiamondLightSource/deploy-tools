#%Module1.0
##
## ec - ec command line tool configured for k11
##
module-whatis "ec command line tool configured for k11"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "k11-beamline/k11"
setenv EC_K8S_NAMESPACE "k11-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/k11-services.git"

module load edge-containers-cli
module load k8s-k11/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/k11/entrypoints"
