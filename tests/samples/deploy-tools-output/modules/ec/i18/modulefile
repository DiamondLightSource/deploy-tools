#%Module1.0
##
## ec - ec command line tool configured for i18
##
module-whatis "ec command line tool configured for i18"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i18-beamline/i18"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i18-services.git"

module load edge-containers-cli
module load k8s-i18/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i18/entrypoints"
