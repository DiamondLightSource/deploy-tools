#%Module1.0
##
## ec - ec command line tool configured for b24
##
module-whatis "ec command line tool configured for b24"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "b24-beamline/b24"
setenv EC_K8S_NAMESPACE "b24-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/b24-services.git"

module load edge-containers-cli
module load k8s-b24/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/b24/entrypoints"
