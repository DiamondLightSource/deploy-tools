#%Module1.0
##
## ec - ec command line tool configured for i13
##
module-whatis "ec command line tool configured for i13"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i13-beamline/i13"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i13-services.git"

module load edge-containers-cli
module load k8s-i13/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i13/entrypoints"
