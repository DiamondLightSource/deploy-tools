#%Module1.0
##
## ec - ec command line tool configured for i20-1
##
module-whatis "ec command line tool configured for i20-1"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i20-1-beamline/i20-1"
setenv EC_K8S_NAMESPACE "i20-1-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i20-1-services.git"

module load edge-containers-cli
module load k8s-i20-1/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i20-1/entrypoints"
