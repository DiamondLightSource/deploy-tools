#%Module1.0
##
## ec - ec command line tool configured for i07
##
module-whatis "ec command line tool configured for i07"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i07-beamline/i07"
setenv EC_K8S_NAMESPACE "i07-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i07-services.git"

module load edge-containers-cli
module load k8s-i07/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i07/entrypoints"
