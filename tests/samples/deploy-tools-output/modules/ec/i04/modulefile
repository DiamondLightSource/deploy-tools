#%Module1.0
##
## ec - ec command line tool configured for i04
##
module-whatis "ec command line tool configured for i04"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i04-beamline/i04"
setenv EC_K8S_NAMESPACE "i04-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i04-services.git"

module load edge-containers-cli
module load k8s-i04/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i04/entrypoints"
