#%Module1.0
##
## ec - ec command line tool configured for i03
##
module-whatis "ec command line tool configured for i03"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i03-beamline/i03"
setenv EC_K8S_NAMESPACE "i03-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i03-services.git"

module load edge-containers-cli
module load k8s-i03/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i03/entrypoints"
