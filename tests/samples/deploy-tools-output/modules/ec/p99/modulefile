#%Module1.0
##
## ec - ec command line tool configured for p99
##
module-whatis "ec command line tool configured for p99"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "p99-beamline/p99"
setenv EC_K8S_NAMESPACE "p99-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/p99-services.git"

module load edge-containers-cli
module load k8s-p99/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/p99/entrypoints"
