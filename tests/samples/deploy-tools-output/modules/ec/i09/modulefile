#%Module1.0
##
## ec - ec command line tool configured for i09
##
module-whatis "ec command line tool configured for i09"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i09-beamline/i09"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i09-services.git"

module load edge-containers-cli
module load k8s-i09/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i09/entrypoints"
