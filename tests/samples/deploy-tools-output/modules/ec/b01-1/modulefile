#%Module1.0
##
## ec - ec command line tool configured for b01-1
##
module-whatis "ec command line tool configured for b01-1"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "b01-1-beamline/b01-1"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/b01-1-services.git"

module load edge-containers-cli
module load k8s-b01-1/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/b01-1/entrypoints"
