#%Module1.0
##
## ec - ec command line tool configured for i12
##
module-whatis "ec command line tool configured for i12"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i12-beamline/i12"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i12-services.git"

module load edge-containers-cli
module load k8s-i12/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i12/entrypoints"
