#%Module1.0
##
## ec - ec command line tool configured for i19
##
module-whatis "ec command line tool configured for i19"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i19-beamline/i19"
setenv EC_K8S_NAMESPACE "i19-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i19-services.git"

module load edge-containers-cli
module load k8s-i19/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i19/entrypoints"
