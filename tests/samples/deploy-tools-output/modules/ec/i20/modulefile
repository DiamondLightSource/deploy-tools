#%Module1.0
##
## ec - ec command line tool configured for i20
##
module-whatis "ec command line tool configured for i20"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i20-beamline/i20"
setenv EC_K8S_NAMESPACE "i20-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i20-services.git"

module load edge-containers-cli
module load k8s-i20/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i20/entrypoints"
