#%Module1.0
##
## ec - ec command line tool configured for b22
##
module-whatis "ec command line tool configured for b22"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "b22-beamline/b22"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/b22-services.git"

module load edge-containers-cli
module load k8s-b22/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/b22/entrypoints"
