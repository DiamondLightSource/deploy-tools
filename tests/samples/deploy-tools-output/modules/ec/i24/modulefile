#%Module1.0
##
## ec - ec command line tool configured for i24
##
module-whatis "ec command line tool configured for i24"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i24-beamline/i24"
setenv EC_K8S_NAMESPACE "i24-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i24-services.git"

module load edge-containers-cli
module load k8s-i24/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i24/entrypoints"
