#%Module1.0
##
## ec - ec command line tool configured for i06
##
module-whatis "ec command line tool configured for i06"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i06-beamline/i06"
setenv EC_K8S_NAMESPACE "i06-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i06-services.git"

module load edge-containers-cli
module load k8s-i06/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i06/entrypoints"
