#%Module1.0
##
## ec - ec command line tool configured for i23
##
module-whatis "ec command line tool configured for i23"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i23-beamline/i23"
setenv EC_K8S_NAMESPACE "i23-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i23-services.git"

module load edge-containers-cli
module load k8s-i23/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i23/entrypoints"
