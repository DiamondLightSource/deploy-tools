#%Module1.0
##
## ec - ec command line tool configured for p45
##
module-whatis "ec command line tool configured for p45"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "p45-beamline/p45"
setenv EC_K8S_NAMESPACE "p45-beamline"
setenv EC_SERVICES_REPO "https://github.com/epics-containers/p45-services.git"

module load edge-containers-cli
module load pollux/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/p45/entrypoints"
