#%Module1.0
##
## ec - ec command line tool configured for b21
##
module-whatis "ec command line tool configured for b21"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "b21-beamline/b21"
setenv EC_K8S_NAMESPACE "b21-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/b21-services.git"

module load edge-containers-cli
module load k8s-b21/0.1

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/b21/entrypoints"
