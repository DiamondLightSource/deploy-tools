#%Module1.0
##
## ec - ec command line tool configured for i03-1
##
module-whatis "ec command line tool configured for i03-1"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i03-1-beamline/i03-1"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i03-1-services.git"

module load edge-containers-cli
module load k8s-i03-1/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i03-1/entrypoints"
