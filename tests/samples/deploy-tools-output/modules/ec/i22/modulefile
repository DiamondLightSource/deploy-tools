#%Module1.0
##
## ec - ec command line tool configured for i22
##
module-whatis "ec command line tool configured for i22"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "i22-beamline/i22"
setenv EC_K8S_NAMESPACE "i22-beamline"
setenv EC_SERVICES_REPO "https://gitlab.diamond.ac.uk/controls/containers/beamline/i22-services.git"

module load edge-containers-cli
module load k8s-i22/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/i22/entrypoints"
