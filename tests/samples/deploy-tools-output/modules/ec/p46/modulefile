#%Module1.0
##
## ec - ec command line tool configured for p46
##
module-whatis "ec command line tool configured for p46"

if { [module-info mode load] } {
    if { [is-loaded ec] } {
      module unload ec
    }
}

setenv EC_TARGET "p46-beamline/p46"
setenv EC_K8S_NAMESPACE "p46-beamline"
setenv EC_SERVICES_REPO "https://github.com/epics-containers/p46-services.git"

module load edge-containers-cli
module load pollux/local

prepend-path PATH "/tmp/deploy-tools-output/modules/ec/p46/entrypoints"
