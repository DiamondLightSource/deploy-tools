{
  "$defs": {
    "ApplicationConfig": {
      "properties": {
        "app_config": {
          "discriminator": {
            "mapping": {
              "apptainer": "#/$defs/ApptainerConfig",
              "runfile": "#/$defs/RunFileConfig"
            },
            "propertyName": "app_type"
          },
          "oneOf": [
            {
              "$ref": "#/$defs/ApptainerConfig"
            },
            {
              "$ref": "#/$defs/RunFileConfig"
            }
          ],
          "title": "App Config"
        }
      },
      "required": [
        "app_config"
      ],
      "title": "ApplicationConfig",
      "type": "object"
    },
    "ApptainerConfig": {
      "properties": {
        "app_type": {
          "const": "apptainer",
          "enum": [
            "apptainer"
          ],
          "title": "App Type",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "version": {
          "title": "Version",
          "type": "string"
        },
        "container": {
          "$ref": "#/$defs/ContainerImageConfig"
        },
        "entrypoints": {
          "items": {
            "$ref": "#/$defs/EntrypointConfig"
          },
          "title": "Entrypoints",
          "type": "array"
        },
        "global_options": {
          "$ref": "#/$defs/EntrypointOptionsConfig"
        }
      },
      "required": [
        "app_type",
        "name",
        "version",
        "container",
        "entrypoints"
      ],
      "title": "ApptainerConfig",
      "type": "object"
    },
    "ContainerImageConfig": {
      "properties": {
        "path": {
          "title": "Path",
          "type": "string"
        },
        "version": {
          "title": "Version",
          "type": "string"
        }
      },
      "required": [
        "path",
        "version"
      ],
      "title": "ContainerImageConfig",
      "type": "object"
    },
    "EntrypointConfig": {
      "properties": {
        "executable_name": {
          "title": "Executable Name",
          "type": "string"
        },
        "command": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Command"
        },
        "options": {
          "$ref": "#/$defs/EntrypointOptionsConfig"
        }
      },
      "required": [
        "executable_name"
      ],
      "title": "EntrypointConfig",
      "type": "object"
    },
    "EntrypointOptionsConfig": {
      "properties": {
        "apptainer_args": {
          "default": "",
          "title": "Apptainer Args",
          "type": "string"
        },
        "command_args": {
          "default": "",
          "title": "Command Args",
          "type": "string"
        },
        "mounts": {
          "default": [],
          "items": {
            "type": "string"
          },
          "title": "Mounts",
          "type": "array"
        }
      },
      "title": "EntrypointOptionsConfig",
      "type": "object"
    },
    "EnvVarConfig": {
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "value": {
          "title": "Value",
          "type": "string"
        }
      },
      "required": [
        "name",
        "value"
      ],
      "title": "EnvVarConfig",
      "type": "object"
    },
    "ModuleDependencyConfig": {
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "version": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "title": "Version"
        }
      },
      "required": [
        "name",
        "version"
      ],
      "title": "ModuleDependencyConfig",
      "type": "object"
    },
    "ModuleMetadataConfig": {
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "version": {
          "title": "Version",
          "type": "string"
        },
        "description": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Description"
        },
        "dependencies": {
          "default": [],
          "items": {
            "$ref": "#/$defs/ModuleDependencyConfig"
          },
          "title": "Dependencies",
          "type": "array"
        },
        "env_vars": {
          "default": [],
          "items": {
            "$ref": "#/$defs/EnvVarConfig"
          },
          "title": "Env Vars",
          "type": "array"
        }
      },
      "required": [
        "name",
        "version"
      ],
      "title": "ModuleMetadataConfig",
      "type": "object"
    },
    "RunFileConfig": {
      "properties": {
        "app_type": {
          "const": "runfile",
          "enum": [
            "runfile"
          ],
          "title": "App Type",
          "type": "string"
        },
        "name": {
          "title": "Name",
          "type": "string"
        },
        "command_path": {
          "title": "Command Path",
          "type": "string"
        },
        "command_args": {
          "default": "",
          "title": "Command Args",
          "type": "string"
        }
      },
      "required": [
        "app_type",
        "name",
        "command_path"
      ],
      "title": "RunFileConfig",
      "type": "object"
    }
  },
  "properties": {
    "metadata": {
      "$ref": "#/$defs/ModuleMetadataConfig"
    },
    "applications": {
      "items": {
        "$ref": "#/$defs/ApplicationConfig"
      },
      "title": "Applications",
      "type": "array"
    }
  },
  "required": [
    "metadata",
    "applications"
  ],
  "title": "ModuleConfig",
  "type": "object"
}